        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        card_view:cardElevation="10dp"
        card_view:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:minHeight="160dp"
            android:minWidth="300dp">

            <Button
                android:id="@+id/quizone"
                style="@style/RedRoundedButton"
                android:background="@drawable/bg_redbtn"
                android:text="Quiz 1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewquizone" />

            <TextView
                android:id="@+id/textViewquizone"
                style="@style/TextViewLessonChoose"
                android:text="Understanding the Nature of Fire"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

