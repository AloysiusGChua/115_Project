<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgressMain">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewprogress1"
        style="@style/TextViewProgress"
        android:text="You took"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewProgressPercent"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/darkgreycircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewprogress1"/>

    <TextView
        android:id="@+id/textViewprogress2"
        style="@style/TextViewProgress"
        android:text="Of the Siklab Lessons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProgressPercent" />

    <TextView
        android:id="@+id/textViewprogress3"
        style="@style/TextViewProgress"
        android:text="Total Score: 0/35"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewprogress2" />

    <TextView
        android:id="@+id/textViewprogress4"
        style="@style/TextViewProgress"
        android:text="Quiz 1: 0/5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewprogress3" />

    <TextView
        android:id="@+id/textViewprogress5"
        style="@style/TextViewProgress"
        android:text="Quiz 2: 0/5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewprogress4" />

    <TextView
        android:id="@+id/textViewprogress6"
        style="@style/TextViewProgress"
        android:text="Quiz 3: 0/5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewprogress5" />

    <TextView
        android:id="@+id/textViewprogress7"
        style="@style/TextViewProgress"
        android:text="Quiz 4: 0/5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewprogress6" />

    <TextView
        android:id="@+id/textViewprogress8"
        style="@style/TextViewProgress"
        android:text="Quiz 5: 0/5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewprogress7" />

    <TextView
        android:id="@+id/textViewprogress9"
        style="@style/TextViewProgress"
        android:text="Quiz 6: 0/5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewprogress8" />

    <TextView
        android:id="@+id/textViewprogress10"
        style="@style/TextViewProgress"
        android:text="Quiz 7: 0/5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewprogress9" />

</android.support.constraint.ConstraintLayout>
</ScrollView>