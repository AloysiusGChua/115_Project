<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LessonMain">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--Lesson 1-->

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CardViewLesson1"
        style="@style/CardViewLesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        card_view:cardElevation="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="280dp"
            android:layout_height="270dp"
            android:minHeight="270dp"
            android:minWidth="280dp">
            <TextView
                android:id="@+id/textView1"
                style="@style/TextViewLessonChoose"
                android:text="Stages of Fire"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/lessonone"
                style="@style/RedRoundedButton"
                android:text="Lesson 1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView1"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

<!--Lesson 2-->

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CardViewLesson2"
        style="@style/CardViewLesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardViewLesson1"
        card_view:cardElevation="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="280dp"
            android:layout_height="270dp"
            android:minHeight="270dp"
            android:minWidth="280dp">
            <TextView
                android:id="@+id/textView2"
                style="@style/TextViewLessonChoose"
                android:text="Understanding the Nature of Fire"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:id="@+id/lessontwo"
                style="@style/RedRoundedButton"
                android:text="Lesson 2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

<!--Lesson 3-->

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CardViewLesson3"
        style="@style/CardViewLesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardViewLesson2"
        card_view:cardElevation="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="280dp"
            android:layout_height="270dp"
            android:minHeight="270dp"
            android:minWidth="280dp">
            <TextView
                android:id="@+id/textView3"
                style="@style/TextViewLessonChoose"
                android:text=" Classes of Fire and Methods of Heat Transfer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/lessonthree"
                style="@style/RedRoundedButton"
                android:text="Lesson 3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

<!--Lesson 4 -->

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CardViewLesson4"
        style="@style/CardViewLesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardViewLesson3"
        card_view:cardElevation="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="280dp"
            android:layout_height="270dp"
            android:minHeight="270dp"
            android:minWidth="280dp">
            <TextView
                android:id="@+id/textView4"
                style="@style/TextViewLessonChoose"
                android:text="Fire Safety Tips"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/lessonfour"
                style="@style/RedRoundedButton"
                android:text="Lesson 4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

<!--Lesson 5-->

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CardViewLesson5"
        style="@style/CardViewLesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardViewLesson4"
        card_view:cardElevation="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="280dp"
            android:layout_height="270dp"
            android:minHeight="270dp"
            android:minWidth="280dp">
            <TextView
                android:id="@+id/textView5"
                style="@style/TextViewLessonChoose"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Fire Extinguishers" />

            <Button
                android:id="@+id/lessonfive"
                style="@style/RedRoundedButton"
                android:text="Lesson 5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

<!--Lesson 6-->

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/CardViewLesson6"
            style="@style/CardViewLesson"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CardViewLesson5"
            card_view:cardElevation="10dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="280dp"
                android:layout_height="270dp"
                android:minHeight="270dp"
                android:minWidth="280dp">
                <TextView
                    android:id="@+id/textView6"
                    style="@style/TextViewLessonChoose"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Fire Prevention" />

                <Button
                    android:id="@+id/lessonsix"
                    style="@style/RedRoundedButton"
                    android:text="Lesson 6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

<!--Lesson 7-->

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/CardViewLesson7"
            style="@style/CardViewLesson"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CardViewLesson6"
            card_view:cardElevation="10dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="280dp"
                android:layout_height="270dp"
                android:minHeight="270dp"
                android:minWidth="280dp">

                <TextView
                    android:id="@+id/textView7"
                    style="@style/TextViewLessonChoose"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Fire Safety First Aid" />

                <Button
                    android:id="@+id/lessonseven"
                    style="@style/RedRoundedButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Lesson 7"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</ScrollView>